{
  "name": "hooxs",
  "version": "2.0.0-beta.1",
  "description": "Add a hooks based plugin system to your application",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.19.0",
  "license": "MIT",
  "homepage": "https://github.com/luxass/hooxs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/hooxs.git"
  },
  "bugs": {
    "url": "https://github.com/luxass/hooxs/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest --run --typecheck",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@luxass/eslint-config": "6.0.1",
    "@types/node": "22.18.12",
    "eslint": "9.38.0",
    "eslint-plugin-format": "1.0.2",
    "publint": "0.3.15",
    "tsdown": "0.15.9",
    "typescript": "5.9.3",
    "vitest": "4.0.1"
  }
